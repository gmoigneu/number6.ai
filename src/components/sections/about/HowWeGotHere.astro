  </div>

  <div class="flex w-full">
    {timeline.map((item, i) => (
      <div class:list={[
        "flex flex-col gap-4 flex-1 py-8",
        i === 0 && "pr-8 border-r border-border",
        i === 1 && "px-8 border-r border-border",
        i === 2 && "pl-8",
